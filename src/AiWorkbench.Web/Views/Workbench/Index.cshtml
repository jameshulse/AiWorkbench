@{
    ViewBag.Title = "Workbench";
}
@section Styles {
    <link href="~/src/css/workbench.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/css/textAngular/textAngular.css" rel="stylesheet" type="text/css" />
}
@section Scripts {
    <script src="~/lib/js/signalr/jquery.signalR.js" type="text/javascript"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/lib/js/raphael/raphael.js" type="text/javascript"></script>

    <script src="~/lib/js/ace-builds/ace.js" type="text/javascript"></script>
    <script src="~/lib/js/angular-ui-ace/ui-ace.js" type="text/javascript"></script>
    <script src="~/src/js/app.js" type="text/javascript"></script>
    <script src="~/src/js/Simulations/EntityFactory.js" type="text/javascript"></script>
    <script src="~/src/js/Simulations/Simulation.js" type="text/javascript"></script>
    <script src="~/src/js/Controllers/workbenchctrl.js" type="text/javascript"></script>
}

<div id="page-container" ng-controller="WorkbenchCtrl">
    <div id="left-container">
    </div>

    <div id="right-container">
        <div id="toolbar">
            <button ng-click="start()">Start</button>
            <button ng-click="pause()">Pause</button>
            <button ng-click="restart()">Restart</button>
        </div>

        <div ui-ace="{mode:'javascript'}" id="scripteditor" ng-model="script">
        </div>

        <div id="console">

        </div>
    </div>
</div>